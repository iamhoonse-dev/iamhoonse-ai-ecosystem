{
  "name": "@repo/react-ui",
  "version": "0.0.0",
  "private": false,
  "type": "module",
  "description": "React UI components for the iamhoonse AI ecosystem",
  "license": "MIT",
  "author": "hoonse",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    "./styles.css": "./dist/index.css",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./common": {
      "types": "./dist/common.d.ts",
      "import": "./dist/common.mjs",
      "require": "./dist/common.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build:components": "tsup",
    "build:styles": "tailwindcss -i ./src/styles.css -o ./dist/index.css",
    "dev:components": "tsup --watch",
    "dev:styles": "tailwindcss --watch -i ./src/styles.css -o ./dist/index.css",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "react": ">=19.0.0",
    "react-dom": ">=19.0.0"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.541.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.3.7"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@tailwindcss/cli": "^4.1.5",
    "@types/node": "^22.15.3",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.32.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.5",
    "tsup": "^8.3.5",
    "typescript": "5.9.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=22"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "typescript",
    "tree-shaking",
    "esm",
    "cjs",
    "umd"
  ]
}